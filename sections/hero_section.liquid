<section class="inner-hero-section">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image |  image_url }}" width="auto" height="auto">
  {% else %}
    {% capture current %}{% cycle 1,2 %}{% endcapture %}
    <!-- {{ 'lifestyle-' |  append: 'current' | placeholder_svg_tag: 'placeholder-svg' }} - -->
    {% assign svg_name = 'lifestyle-' | append: current %}
    {{ svg_name | placeholder_svg_tag }}
  {% endif %}
  <div class="hero-container">
    <div class="hero-row">
      <div class="hero-text-container">
        <h1 class="hero-heading">{{ section.settings.title }}</h1>
        <p class="hero-description">{{ section.settings.description }}</p>
        <button class="btn">
          <a class="btn-link" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        </button>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Heading Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Example Heading",
      "label": "Heading Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Example Paragraph</p>",
      "label": "Heading Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "hero"
    }
  ]
}
{% endschema %}
